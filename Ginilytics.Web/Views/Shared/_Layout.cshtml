    <header class="dashboard-header bg-white">
        <div class="container-fluid p-0">
            <div class="d-flex align-items-center justify-content-between">
                <div class="p-0">
                    <figure class="mb-0">
                        <a asp-controller="Dashboard" asp-action="Index" class="d-block"><img src="~/images/Ginilytics-support-small.png" alt="Ginilytics Support" /></a>
                    </figure>
                </div>

                <div class="search-form position-relative">
                    <input type="text" class="form-control" placeholder="Search here..." />
                    <div class="search-icon position-absolute text-center">
                        <i class="fas fa-search"></i>
                    </div>
                </div>
                <partial name="_LoginPartial" />

            </div>
        </div>
    </header>
    <nav class="navbar flex-column p-0">
        <ul class="main-menu mb-0 d-flex align-items-center">
            <li class="active">
                <a href="dashboard.html">Dashboard</a>
            </li>
            <li>
                <a href="leads.html">Leads <span>(10)</span></a>
            </li>
            <li>
                <a href="opportunities.html">Opportunities</a>
            </li>
            <li>
                <a href="accounts.html">Accounts</a>
            </li>
            <li>
                <a href="contacts.html">Contacts</a>
            </li>
            <li>
                <a href="activity.html">Activities</a>
            </li>
            <li>
                <a href="quotations.html">Quotation</a>
            </li>
            <li>
                <a href="orders.html">Orders <span>(10)</span></a>
            </li>
            <li>
                <a href="requests.html">Requests <span>(10)</span></a>
            </li>
            <li>
                <a href="tickets.html">Tickets <span>(10)</span></a>
            </li>
            <li>
                <a href="reports.html">Reports</a>
            </li>
        </ul>
    </nav>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer">
        <p class="m-0 fs-8">© Copyright Ginilytics Support 2021 All Rights Reserved</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

